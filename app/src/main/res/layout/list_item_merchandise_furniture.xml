<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_merchandise"
            android:layout_width="120dp"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/fancycrave" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_merchandise"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/photo_merchandise"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discount_price"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/photo_merchandise"
                android:layout_alignStart="@+id/name_merchandise"
                android:text="TextView"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/original_price"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/search_doc"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:onClick="openWeb"
                android:text="詳細規格"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>